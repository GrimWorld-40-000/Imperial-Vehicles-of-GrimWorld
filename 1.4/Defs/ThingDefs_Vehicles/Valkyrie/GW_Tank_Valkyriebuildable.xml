<?xml version="1.0" encoding="utf-8" ?>

<Defs>
	<Vehicles.VehicleBuildDef ParentName="VehicleBaseBuildable">
		<defName>Valkyriebuild</defName>
		<label>Valkyrie</label>
		<description>The Valkyrie Airborne Assault Carrier is a heavily armed Imperial Aircraft with VTOL (Vertical Take-off and Landing) capabilities, used to ferry special forces such as Storm Trooper Squads and Drop Troop Regiments such as the Elysian Drop Troops and Harakoni Warhawks to and from combat zones. \n\n&lt;color=#bb8f04&gt;Crew:&lt;/color&gt; Driver x1\n&lt;color=#bb8f04&gt;Fuel type:&lt;/color&gt; Chemfuel</description>
		
		<designationCategory>GrimworldCategory</designationCategory>
		
		<graphicData>
			<texPath>Things/Vehicles/Valkyrie/Valkyrie</texPath>
			<graphicClass>Graphic_Multi</graphicClass>
			<drawSize>(15,15)</drawSize>
		</graphicData>
		
		<rotatable>true</rotatable>

		<statBases>
			<MaxHitPoints>500</MaxHitPoints>
			<WorkToBuild>9000</WorkToBuild>
			<Flammability>0.5</Flammability>
		</statBases>
		
		<size>(3,10)</size>
		
		<researchPrerequisites>
			<li>GW_ImperialVehicles</li>
		</researchPrerequisites>
		
		<costList>
			<Steel>650</Steel>
			<HP_Ceramite>350</HP_Ceramite>
			<GW_VehicleCannon>2</GW_VehicleCannon>
			<GW_JetEngine>2</GW_JetEngine>
			<GW_VehicleExhaust>2</GW_VehicleExhaust>
			<GW_VehicleSideTurret>2</GW_VehicleSideTurret>
			<ComponentIndustrial>32</ComponentIndustrial>
		</costList>
		
		<soundImpactDefault>BulletImpact_Metal</soundImpactDefault>
		<thingToSpawn>Valkyriepawn</thingToSpawn>
		
		<constructionSkillPrerequisite>6</constructionSkillPrerequisite>
	</Vehicles.VehicleBuildDef>
</Defs>
