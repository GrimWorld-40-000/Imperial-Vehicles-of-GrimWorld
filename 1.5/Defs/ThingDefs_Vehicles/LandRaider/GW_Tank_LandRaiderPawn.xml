			</vehicleJobLimitations>
			<roles>
				<li>
					<key>driver</key>
					<label>Driver</label>
					<slots>1</slots>
					<slotsToOperate>1</slotsToOperate>
					<handlingTypes>
						<li>Movement</li>
						<li>Turret</li>
					</handlingTypes>
					<turretIds>
						<li>frontMountedTurret</li>
					</turretIds>
				</li>
				<li>
                    <key>gunnertwo</key>
                    <label>Gunner Left</label>
                    <slots>1</slots>
                    <slotsToOperate>1</slotsToOperate>
                    <handlingTypes>Turret</handlingTypes>
                    <turretIds>
                        <li>leftMountedTurret</li>
                    </turretIds>
                </li>
                <li>
                    <key>gunnerone</key>
